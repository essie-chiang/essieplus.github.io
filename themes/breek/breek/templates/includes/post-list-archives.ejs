<% let years = []; posts.forEach((item) => { const year = item.date.substring(0, 4); if (!years.includes(year)) { years.push(year); } }); %>


<div class="main-article post">
  <h2 class="year">共 <%= site.posts.length %> 篇文章</h2>
<% years.forEach(function(year) { %>
    <h2 class="year"><%- year %></h2>
    <% posts.forEach(function(post) { %>
      <%if (post.date.indexOf(year) !== -1) { %>
      <article class="item default grid-33 tablet-grid-50 np-mobile">
        <a href="<%= post.link %>" class="thumb hover-effect">
          <span class="fullimage cover" style="display:block;border-radius:50%;background-image: url('<% if (post.feature) { %><%= post.feature %><% } else { %><%= site.customConfig.featureImage %><%} %>');"></span>
        </a>
        <div class="info gradient-effect">
          <time datetime="<%= post.dateFormat %>"><%= site.utils.moment(post.date).locale('zh-cn').fromNow() %></time>
          <h4 class="title usmall">
            <a href="<%= post.link %>"><%= post.title %></a>
          </h4>
        </div>
      </article>
      <% } %>
    <% }); %>
    <div class="clear"></div>
<% }); %>
</div>